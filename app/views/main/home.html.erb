<%=render "partials/banner_slider"%>
<%=render "partials/banner_categories"%>
<div class="new_arrivals_agile_w3ls_info">
	<div class="container">
		<h3 class="wthree_text_info">Productos
			<span>Destacados</span>
		</h3>
		<div id="horizontalTab">
			<div class="resp-tabs-container">
				<div class="tab1">
					<%@products.each do |product|%>
						<div class="col-md-3 product-men">
							<div class="men-pro-item simpleCart_shelfItem">
								<div class="men-thumb-item">
									<%=image_tag(product.pictures.first.picture_file.url(:medium),class:"pro-image-front")%>
				          <%=image_tag(product.pictures.first.picture_file.url(:medium),class:"pro-image-back")%>
									<div class="men-cart-pro">
										<div class="inner-men-cart-pro">
				              <%=link_to "DETALLES", product_path(product),class:"link-product-add-cart"%>
				            </div>
									</div>
									<%if product.product_offer%>
			              <span class="product-new-top">OFERTA!!</span>
			            <%end%>

								</div>
								<div class="item-info-product ">
									<h4>
										<%=link_to product.name,product_path(product)%>
									</h4>
									<div class="info-product-price">
										<span class="item_price">$<%=product.price%></span>
										<!--<del>$69.71</del>-->
									</div>
								</div>
							</div>
						</div>
						<%end%>
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
	</div>
</div>
